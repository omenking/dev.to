<% title "Dashboard - DEV" %>

<div class="dashboard-container" id="user-dashboard-following">
  <%= render "actions" %>

  <h2>Followed users (<%= @user.following_users_count %>)</h2>
  <div class="following-list" id="following-list">
    <% @follows.each do |follow| %>
      <% user = follow.followable %>
      <% if user %>
        <div class="single-article">
          <a href="<%= user.path %>" class="block-link">
            <h2>
              <img alt="<%= user.username %> profile image" src="<%= ProfileImage.new(user).get(60) %>" />
              <%= user.name %>
              <span class="dashboard-username">@<%= user.username %></span>
            </h2>
          </a>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="loading-following" id="loading-following">
    loading...
  </div>
</div>
